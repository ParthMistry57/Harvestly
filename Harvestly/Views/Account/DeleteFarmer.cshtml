@model Harvestly.Models.User
@{
    ViewBag.Title = "Delete Farmer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="product-card" style="margin-top: 50px;">
                <div class="card-body">
                    <h2><i class="fas fa-exclamation-triangle text-warning"></i> Delete Farmer Account</h2>
                    <hr />
                    <h4>Are you sure you want to deactivate this farmer account?</h4>
                    <dl class="dl-horizontal">
                        <dt>Username:</dt>
                        <dd>@Model.Username</dd>
                        <dt>Full Name:</dt>
                        <dd>@(Model.FullName ?? "N/A")</dd>
                        <dt>Email:</dt>
                        <dd>@(Model.Email ?? "N/A")</dd>
                        <dt>Created Date:</dt>
                        <dd>@Model.CreatedDate.ToString("MM/dd/yyyy")</dd>
                    </dl>

                    @using (Html.BeginForm("DeleteFarmer", "Account", new { id = Model.Id }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash"></i> Yes, Deactivate
                            </button>
                            @Html.ActionLink("Cancel", "ManageFarmers", "Account", null, new { @class = "btn btn-default btn-lg" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

