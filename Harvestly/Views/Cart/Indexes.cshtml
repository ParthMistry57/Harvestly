@model IEnumerable<Harvestly.Models.MenuItem>

@{
    ViewBag.Title = "Fresh Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header text-center">
                <h1><i class="fas fa-shopping-bag"></i> Fresh Products</h1>
                <p class="lead">Discover our wide selection of fresh, organic produce from local farms</p>
            </div>
        </div>
    </div>
</div>

<!-- Products Grid -->
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="product-card">
                    <div class="card-header text-center">
                        <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                        <span class="badge badge-success">@Html.DisplayFor(modelItem => item.Category.Name)</span>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            <div class="price mb-3">£@Html.DisplayFor(modelItem => item.Price)</div>
                            <p class="text-muted mb-3">Available: @Html.DisplayFor(modelItem => item.Quantity) units</p>
                            @if (item.freeDelivery)
                            {
                                <span class="badge badge-success mb-3"><i class="fas fa-truck"></i> Free Delivery</span>
                            }
                            else
                            {
                                <span class="badge badge-warning mb-3"><i class="fas fa-truck"></i> Delivery Charges Apply</span>
                            }
                        </div>
                        
                        <div class="text-center">
                            @Html.ActionLink("Add to Cart", "AddToCart", new { menuId = item.Id }, new { @class = "btn btn-warning btn-lg" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Empty State -->
@if (!Model.Any())
{
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <div class="product-card">
                    <div class="card-body">
                        <i class="fas fa-shopping-bag fa-4x text-muted mb-4"></i>
                        <h3>No Products Available</h3>
                        <p class="text-muted">We're currently updating our inventory. Please check back soon!</p>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-home"></i> Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
