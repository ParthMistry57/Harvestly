@model Harvestly.Models.Order

@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Header -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header text-center">
                <h1><i class="fas fa-receipt"></i> Order Details</h1>
                <p class="lead">Order #@Model.OrderId - @Model.OrderDate.ToString("MMMM dd, yyyy")</p>
            </div>
        </div>
    </div>
</div>

<!-- Order Information -->
<div class="container">
    <div class="row">
        <!-- Order Summary -->
        <div class="col-lg-4">
            <div class="product-card">
                <div class="card-header">
                    <h3><i class="fas fa-info-circle"></i> Order Summary</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Order ID:</strong>
                        </div>
                        <div class="col-6">
                            #@Html.DisplayFor(model => model.OrderId)
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Order Date:</strong>
                        </div>
                        <div class="col-6">
                            @Html.DisplayFor(model => model.OrderDate)
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Status:</strong>
                        </div>
                        <div class="col-6">
                            @if (Model.HasBeenShipped)
                            {
                                <span class="badge badge-success"><i class="fas fa-check"></i> Shipped</span>
                            }
                            else
                            {
                                <span class="badge badge-warning"><i class="fas fa-clock"></i> Pending</span>
                            }
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Total:</strong>
                        </div>
                        <div class="col-6">
                            <strong class="price">£@Html.DisplayFor(model => model.Total)</strong>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.PaymentTransactionId))
                    {
                        <div class="row mb-3">
                            <div class="col-6">
                                <strong>Transaction ID:</strong>
                            </div>
                            <div class="col-6">
                                <small>@Html.DisplayFor(model => model.PaymentTransactionId)</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Customer Information -->
        <div class="col-lg-4">
            <div class="product-card">
                <div class="card-header">
                    <h3><i class="fas fa-user"></i> Customer Information</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Name:</strong>
                        </div>
                        <div class="col-6">
                            @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Username:</strong>
                        </div>
                        <div class="col-6">
                            @Html.DisplayFor(model => model.Username)
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-6">
                            <a href="mailto:@Model.Email">@Html.DisplayFor(model => model.Email)</a>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>Phone:</strong>
                        </div>
                        <div class="col-6">
                            @if (!string.IsNullOrEmpty(Model.Phone))
                            {
                                <a href="tel:@Model.Phone">@Html.DisplayFor(model => model.Phone)</a>
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Shipping Address -->
        <div class="col-lg-4">
            <div class="product-card">
                <div class="card-header">
                    <h3><i class="fas fa-map-marker-alt"></i> Shipping Address</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Address:</strong><br>
                        @Html.DisplayFor(model => model.Address)
                    </div>
                    <div class="mb-3">
                        <strong>City:</strong> @Html.DisplayFor(model => model.City)
                    </div>
                    <div class="mb-3">
                        <strong>State:</strong> @Html.DisplayFor(model => model.State)
                    </div>
                    <div class="mb-3">
                        <strong>Postal Code:</strong> @Html.DisplayFor(model => model.PostalCode)
                    </div>
                    <div class="mb-3">
                        <strong>Country:</strong> @Html.DisplayFor(model => model.Country)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mt-4">
        <div class="col-lg-12">
            <div class="product-card">
                <div class="card-body">
                    <h4><i class="fas fa-cog"></i> Order Actions</h4>
                    <p class="text-muted">Manage this order</p>
                    <div class="text-center" style="display: flex; gap: 10px; justify-content: center; flex-wrap: wrap;">
                        @Html.ActionLink("Edit Order", "Edit", new { id = Model.OrderId }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Back to Orders", "Index", null, new { @class = "btn btn-default" })
                        @Html.ActionLink("Delete Order", "Delete", new { id = Model.OrderId }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
